    <script>
        Dropzone.autoDiscover = false;

        var uploadedIds = [];

        let myDropzone = new Dropzone("#my-dropzone", {
            url: "{{ path('app_member_upload') }}",
            dictDefaultMessage: "Glissez vos fichiers ici ou cliquez pour téléverser",
            paramName: "file",
            maxFilesize: 100, // MB
            acceptedFiles: ".pdf,.jpg,.jpeg,.png,.doc,.docx,.ppt,.pptx",
            addRemoveLinks: true,
            success: function(file, response) {
                uploadedIds.push(response.id);
                document.getElementById('attachments_ids').value = uploadedIds.join(',');
            },
            removedfile: function(file) {
                file.previewElement.remove();
            }
        });
    </script>

